
<h1>Моя страница</h1>
<h5>Для полного доступа заполните форму:</h5>
<div>
  <button class="btn btn-primary">Заполнить форму</button>
</div>



{{#if orders.length}}
	{{#each orders}}
		<div class="row">
			<div class="col s6 offset-s3">
				<div class="card">
					<div class="card-content">
						<span class="card-title">
							Курс <small>{{_id}}</small>
						</span>
						<p class="date">{{date}}</p>
						<p><em>{{user.userId.name}}</em>({{user.userId.email}})</p>
						<ol>
							{{#each courses}}
								<li>
									{{course.title}} (x<strong>{{count}}</strong>)
								</li>
								{{/each}}
						</ol>
						<hr>
            {{#if course.price}}
						<p>Цена: <span class="price">{{price}}</span></p>
            {{/if}}
					</div>
				</div>
			</div>
		</div>
	{{/each}}
{{else}}
	<p>Заказов пока нет</p>
{{/if}}
